    <meta name="author" content="Kevacoin Core Developers">
    <link rel="icon" href="./images/fav_icon.png">

    <title>{{title}}</title>

    <link href="https://fonts.googleapis.com/css?family=Dosis:400,500,600,700%7COpen+Sans:400,600,700" rel="stylesheet">
