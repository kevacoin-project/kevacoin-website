  <body>

    <nav class="navbar fixed-top navbar-expand-md navbar-dark kva-bg">
      <div class="container">
        <a class="navbar-brand" href="index.html">
          <img src="./images/logo.png" width="32" height="32" alt="kevacoin">
          <span class="kva-logo">KEVACOIN</span>
        </a>
        <button class="navbar-toggler kva-custom-toggler" type="button" data-toggle="collapse" data-target="#navbarsDefault" aria-controls="navbarsDefault" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse mr-5 pr-5" id="navbarsDefault">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item px-2 {{tutorialActive}}">
              <a class="nav-link" href="tutorial.html">教程</a>
            </li>
            <li class="nav-item px-2 {{documentationActive}}">
              <a class="nav-link" href="documentation.html">文档</a>
            </li>
            <li class="nav-item px-2 {{faqActive}}">
              <a class="nav-link" href="faq.html">常问问题</a>
            </li>
            <li class="nav-item px-2 {{miningActive}}">
              <a class="nav-link" href="mining.html">挖矿</a>
            </li>
            <li class="nav-item px-2 {{blogActive}}">
              <a class="nav-link" href="blog.html">博客</a>
            </li>
            <li class="nav-item px-2 {{miningActive}}">
              <a class="nav-link" href="index.html">EN</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    {{ content | safe }}

